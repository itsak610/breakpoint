extends layout

block content
    #cursor
        .cursor__circle
    .container1
        form.registerform(method='post' action='/school/participant/register/clipped')
            h1.title
                | Register a student from your school
                br
                | for (c)lipped
            if error
                if errorcode == 'red'
                    p.error1= error
                else
                    p.error2= error
            .form-group
                label(for='name') Full Name
                input(type='text' name='name' placeholder='eg. Elon Musk' maxlength='20' required='required')
            .form-group
                label(for='email') Email Address
                input(type='email' name='email' placeholder='eg. elon_musk@gmail.com' maxlength='40' required='required')
            .form-group
                label(for='phonenumber') Phone Number
                input(type='number' name='phonenumber' placeholder='eg. 9876543210' maxlength='10' required='required')
            input.btn(type='submit' value='Register')
